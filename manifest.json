{
  "manifest_version": 3,
  "name": "Bearer Token Extractor",
  "version": "1.3",
  "permissions": [
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": ["https://*/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
